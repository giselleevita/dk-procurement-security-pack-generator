# Backend
APP_ENV=dev
APP_BASE_URL=http://localhost:8000
WEB_BASE_URL=http://localhost:5173
# Optional: comma-separated list of allowed web origins for CORS/CSRF Origin checks.
# Defaults include localhost + 127.0.0.1 for port 5173.
ALLOWED_ORIGINS=

# Cookie/session security (dev can be false; prod should be true behind TLS)
COOKIE_SECURE=false

# Crypto (generate once; do not rotate casually)
# 32-byte urlsafe base64 key. Example generation:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=REPLACE_ME

# Postgres
POSTGRES_DB=dkpack
POSTGRES_USER=dkpack
POSTGRES_PASSWORD=dkpack
DATABASE_URL=postgresql+psycopg://dkpack:dkpack@db:5432/dkpack

# GitHub OAuth App
GITHUB_CLIENT_ID=REPLACE_ME
GITHUB_CLIENT_SECRET=REPLACE_ME
GITHUB_OAUTH_REDIRECT_URI=http://localhost:8000/api/oauth/github/callback

# Microsoft Entra (App Registration)
MS_CLIENT_ID=REPLACE_ME
MS_CLIENT_SECRET=REPLACE_ME
# Use "organizations" for work/school accounts; can be a tenant id.
MS_TENANT=organizations
MS_OAUTH_REDIRECT_URI=http://localhost:8000/api/oauth/microsoft/callback
